<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="DialogShareAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_out</item>
    </style>

    <style name="ImagePickStyle" parent="DialogStyle">
        <item name="android:windowAnimationStyle">@style/DialogShareAnimation</item>
    </style>

    <style name="ImagePickStyle.Btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/common_font</item>
        <item name="android:paddingTop">@dimen/y20</item>
        <item name="android:paddingBottom">@dimen/y20</item>
    </style>

    <style name="DivideLineStyle">
        <item name="android:layout_height">@dimen/divide_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#D9D9D9</item>
    </style>
</resources>